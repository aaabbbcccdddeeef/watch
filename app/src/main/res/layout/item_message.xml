<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/selector_menu_item"
    android:clickable="true"
    android:focusable="true"
    android:orientation="vertical"
    android:paddingLeft="12.0px"
    android:paddingTop="4.0px"
    android:paddingRight="12.0px"
    android:paddingBottom="4.0px">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@id/tv_date"
            android:layout_width="0.0dip"
            android:layout_height="wrap_content"
            android:layout_weight="1.0"
            android:text="03:11:03"
            android:textColor="@color/white"
            android:textSize="24.0sp" />

        <TextView
            android:id="@+id/tv_un_read"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="未读"
            android:textColor="@color/red"
            android:textSize="24.0sp"
            android:visibility="gone" />
    </LinearLayout>

    <TextView
        android:id="@+id/tv_content"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="4.0px"
        android:singleLine="true"
        android:text="今天天气很冷,小心多添一件衣服"
        android:textColor="@color/white"
        android:textSize="20.0sp" />

</LinearLayout>